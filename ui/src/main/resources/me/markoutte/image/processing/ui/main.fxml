<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.markoutte.image.processing.ui.MainController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" pannable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <Canvas fx:id="canvas" height="317.0" onMouseClicked="#showHistogramOfSegment" width="595.0" />
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="595.0">
         <children>
            <ComboBox fx:id="processing" disable="true" prefWidth="150.0" />
            <Button fx:id="prevImage" disable="true" mnemonicParsing="false" onAction="#setPrevImage" text="←">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="preprocessButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#preprocess" text="PP">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="nextImage" disable="true" mnemonicParsing="false" onAction="#setNextImage" text="→">
               <HBox.margin>
                  <Insets left="10.0" right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="openButton" defaultButton="true" mnemonicParsing="false" onAction="#chooseFile" text="%openButton.text">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
            <Button fx:id="processButton" mnemonicParsing="false" onAction="#process" text="%processButton.text">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <ComboBox fx:id="comboBox" onAction="#changeLevel">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ComboBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
