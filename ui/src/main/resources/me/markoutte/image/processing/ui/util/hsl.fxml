<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="281.0" prefWidth="544.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.markoutte.image.processing.ui.util.HSLBoundChooserController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Slider fx:id="minHue" majorTickUnit="30.0" max="360.0" minorTickCount="2" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="rainbow" />
            <Slider fx:id="minSaturation" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            <Slider fx:id="minIntensive" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="grayscale" />
            <Slider fx:id="maxHue" majorTickUnit="30.0" max="360.0" minorTickCount="2" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="rainbow" />
            <Slider fx:id="maxSaturation" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            <Slider fx:id="maxIntensive" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="grayscale" />

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Spinner fx:id="minSize" editable="true" BorderPane.alignment="CENTER">
                     <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory max="2147483647" min="1" />
                     </valueFactory>
                  </Spinner>
                  <Button mnemonicParsing="false" onAction="#save" text="%menu.file.save" />

                  <Hyperlink onAction="#reset" text="Reset" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
